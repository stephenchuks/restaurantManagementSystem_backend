{
    "name": "menu-platform-backend",
    "version": "0.1.0",
    "description": "Backend for multi-vendor restaurant/bar ordering platform",
    "type": "module",
    "main": "dist/server.js",
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "build": "tsc -b",
        "dev": "nodemon --watch 'src/**/*.ts' --exec \"node --loader ts-node/esm\" src/server.ts",
        "start": "node dist/server.js",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write .",
        "test": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/stephenchuks/restaurantManagementSystem_backend.git"
    },
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "envalid": "^8.0.0",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "ioredis": "^5.6.1",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "^8.14.1",
        "qrcode": "^1.5.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.1",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/mongoose": "^5.11.96",
        "@types/node": "^22.15.3",
        "@types/supertest": "^6.0.3",
        "eslint": "^9.26.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-import": "^2.31.0",
        "jest": "^29.7.0",
        "nodemon": "^2.0.22",
        "prettier": "^3.5.3",
        "reflect-metadata": "^0.1.14",
        "supertest": "^7.1.0",
        "ts-jest": "^29.3.2",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.8.3"
    }
}
